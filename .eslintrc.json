{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "project": ["./tsconfig.json"],
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/restrict-template-expressions": ["error", {
      "allowBoolean": true
    }],
    "camelcase": "error",
    "no-duplicate-imports": "error",
    "quotes": ["error", "single"],
    "spaced-comment": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
